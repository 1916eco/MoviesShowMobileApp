<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2C3D ">

    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B2C3D "
        android:text="@string/homeButton"
        android:textColor="#08FA46"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_profilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_profileUsernameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:text="@string/usernameResource"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tv_profileUsername"
        app:layout_constraintEnd_toStartOf="@+id/tv_profileUsername"
        app:layout_constraintTop_toTopOf="@+id/tv_profileUsername" />

    <TextView
        android:id="@+id/tv_profileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Enrico"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profilePicture" />

    <TextView
        android:id="@+id/tv_gamesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/gamesPlayedTitle"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tv_profileUsernameTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_profileUsernameTitle" />

    <TextView
        android:id="@+id/tv_gamesPlayedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="37"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tv_profileUsername"
        app:layout_constraintTop_toBottomOf="@+id/tv_profileUsername" />

    <TextView
        android:id="@+id/tv_favGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/favGame"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tv_gamesPlayed"
        app:layout_constraintTop_toBottomOf="@+id/tv_gamesPlayed" />

    <TextView
        android:id="@+id/tv_favGameOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Super Mario 64"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tv_gamesPlayedCount"
        app:layout_constraintTop_toBottomOf="@+id/tv_gamesPlayedCount" />

    <TextView
        android:id="@+id/tv_myProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myProfileTitle"
        android:textColor="#08FA46 "
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_profilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>