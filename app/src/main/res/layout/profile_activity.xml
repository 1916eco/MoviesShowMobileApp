<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_profilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_profileUsernameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:text="Username"
        app:layout_constraintBottom_toBottomOf="@+id/tv_profileUsername"
        app:layout_constraintEnd_toStartOf="@+id/tv_profileUsername"
        app:layout_constraintTop_toTopOf="@+id/tv_profileUsername" />

    <TextView
        android:id="@+id/tv_profileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Enrico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profilePicture" />

    <TextView
        android:id="@+id/tv_gamesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Games Played"
        app:layout_constraintStart_toStartOf="@+id/tv_profileUsernameTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_profileUsernameTitle" />

    <TextView
        android:id="@+id/tv_gamesPlayedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="37"
        app:layout_constraintStart_toStartOf="@+id/tv_profileUsername"
        app:layout_constraintTop_toBottomOf="@+id/tv_profileUsername" />

    <TextView
        android:id="@+id/tv_favGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Favorite Game"
        app:layout_constraintStart_toStartOf="@+id/tv_gamesPlayed"
        app:layout_constraintTop_toBottomOf="@+id/tv_gamesPlayed" />

    <TextView
        android:id="@+id/tv_favGameOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Super Mario 64"
        app:layout_constraintStart_toStartOf="@+id/tv_gamesPlayedCount"
        app:layout_constraintTop_toBottomOf="@+id/tv_gamesPlayedCount" />

    <TextView
        android:id="@+id/tv_myProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_profilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>